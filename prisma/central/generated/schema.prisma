generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id            Int                       @id @default(autoincrement())
  name          String                    @unique
  database      String
  active        Boolean                   @default(true) // Campo activo agregado
  session       Boolean                   @default(false)
  scannedQR     Boolean                   @default(false)
  phoneWhatsapp String
  logs          CompanyLog[]
  subscriptions CompanySubscription[]
  information   CompanyLegalInformation[]
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt

  @@index([active]) // Indice para la consulta de empresas activas
}

model CompanyLog {
  id          Int      @id @default(autoincrement())
  companyId   Int
  action      String
  description String
  createdAt   DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id])
}

model CompanyLegalInformation {
  id           Int      @id @default(autoincrement())
  ownerName    String?
  ownerPhone   String?
  ownerEmail   String?
  contactName  String?
  contactPhone String?
  contactEmail String?
  address      String?
  rfc          String?
  active       Boolean  @default(true) // Campo activo agregado
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  companyId    Int
  company      Company  @relation(fields: [companyId], references: [id])

  @@index([active]) // Indice para la consulta de informaci√≥n activa
}

model CompanySubscription {
  id               Int                   @id @default(autoincrement())
  companyId        Int
  subscriptionType companySuscrptionType
  startDate        DateTime              @default(now())
  endDate          DateTime?
  active           Boolean               @default(true) // Campo activo agregado
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  company Company @relation(fields: [companyId], references: [id])

  @@index([active]) // Indice para la consulta de suscripciones activas
}

enum companySuscrptionType {
  BASIC
  PREMIUM
  ENTERPRISE
}
